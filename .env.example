# ================= PRIMARY (APPLICATION) DATABASE =================
PRIMARY_DB_HOST=primary-db
PRIMARY_DB_PORT=3306
PRIMARY_DB_HOST_PORT=3307
PRIMARY_DB_NAME=db_manager_app
PRIMARY_DB_PASSWORD=changeMe
PRIMARY_DB_URL=jdbc:mysql://${PRIMARY_DB_HOST}:${PRIMARY_DB_PORT}/${PRIMARY_DB_NAME}?createDatabaseIfNotExist=true&allowPublicKeyRetrieval=true&useSSL=false

# ================= TARGET (MANAGED) DATABASE =================
TARGET_DB_URL=jdbc:mysql://host.docker.internal:3306/
TARGET_DB_USERNAME=root
TARGET_DB_PASSWORD=root

# ================= CORS CONFIG =================
APP_CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://127.0.0.1:3000
APP_CORS_ALLOWED_METHODS=*
APP_CORS_ALLOWED_HEADERS=*
APP_CORS_ALLOW_CREDENTIALS=true
APP_CORS_MAX_AGE=3600

# ================= JWT CONFIG =================
APP_JWT_SECRET=REPLACE_WITH_BASE64_SECRET
APP_JWT_EXPIRATION=900000
APP_JWT_REFRESH_EXPIRATION=86400000

# ================= BACKEND =================
BACKEND_PORT=8080
JAVA_OPTS=-Xms256m -Xmx512m

# ================= FRONTEND =================
NEXT_PUBLIC_API_URL=http://backend:8080/api

# ================= MISC =================
TZ=UTC
